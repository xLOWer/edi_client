<Page x:Class="EdiClient.View.MatchMakerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EdiClient.View"
      mc:Ignorable="d" 
d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MatchMaker">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <ComboBox Grid.Column="0" Grid.Row="0"/>


        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Row="0" Grid.Column="0" 
                     Margin="2" Text="{Binding GoodSearchText}"/>
            <Button Grid.Row="0"  Grid.Column="1" Content="искать"
                    Margin="2"  Command="{Binding GoodSearchCommand}"/>

            <DataGrid Name="GoodsDataGrid" 
                      ItemsSource="{Binding Path=GoodsList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding Path=SelectedGood, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                      SelectionMode="Single"
                      Grid.Row="1"    
                      Grid.ColumnSpan="2"
                      Margin="5"
                      Grid.IsSharedSizeScope="True" 
                      AutoGenerateColumns="False" 
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Width="*" Header="Id"/>
                    <DataGridTextColumn Binding="{Binding Code}" Width="*" Header="Code"/>
                    <DataGridTextColumn Binding="{Binding Name}" Width="*" Header="Name"/>
                    <DataGridTextColumn Binding="{Binding BarCode}" Width="*" Header="BarCode"/>
                    <DataGridTextColumn Binding="{Binding GoodSize}" Width="*" Header="GoodSize"/>
                    <DataGridTextColumn Binding="{Binding Manufacturer}" Width="*" Header="Manufacturer"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>


        <Grid Grid.Column="0" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Row="0" Grid.Column="0" 
                     Margin="2"  Text="{Binding FailedGoodSearchText}"/>
            <Button Grid.Row="0"  Grid.Column="1" Content="искать"
                    Margin="2" Command="{Binding FailedGoodSearchCommand}"/>

            <DataGrid Name="FailedGoodDataGrid" 
                      ItemsSource="{Binding Path=FailedGoodsList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding Path=SelectedFailedGood, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                      SelectionMode="Single"
                      Grid.Column="0"  
                      Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Margin="5"
                      Grid.IsSharedSizeScope="True" 
                      AutoGenerateColumns="False" 
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding ItemDescription}" Width="*" Header="ItemDescription"/>
                    <DataGridTextColumn Binding="{Binding Ean}" Width="*" Header="Ean"/>
                    <DataGridTextColumn Binding="{Binding BuyerItemCode}" Width="*" Header="BuyerItemCode"/>
                    <DataGridTextColumn Binding="{Binding OrderName}" Width="*" Header="OrderName"/>
                    <DataGridTextColumn Binding="{Binding GoodId}" Width="*" Header="GoodId"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>


        <Grid Grid.Column="1" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Name="LoadDataButton" Content="Загрузить данные" Grid.Row="1" Grid.Column="1"
                    Margin="2,30"
                    Command="{Binding LoadDataCommand}"/>

            <Button Content="Связать" Grid.Row="2" Grid.Column="1"
                    Margin="2,30"
                    Command="{Binding MakeMatchingCommand}"/>

            <Button Content="Отвязать" Grid.Row="3" Grid.Column="1"
                    Margin="2,30" 
                    Command="{Binding DisposeMatchingCommand}"/>
            <!--IsEnabled="{Binding DisposeEnabled,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"-->


            <TextBox Name="NewCustomerItemCodeTextBox" Grid.Row="5" Grid.Column="1" Margin="2,30"
                     Text="{Binding NewCustomerItemCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Button Name="NewMatchingButton" Content="Добавить новый" Grid.Row="6" Grid.Column="1"
                    Margin="2,30"
                    Command="{Binding NewMatchingCommand}"/>
            
        </Grid>


        <Grid Grid.Column="2" Grid.Row="1" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            
            
            <TextBox Grid.Row="0" Grid.Column="0" 
                     Margin="2" Text="{Binding MatchesSearchText}"/>
            <Button Grid.Row="0"  Grid.Column="1" Content="искать"
                    Margin="2"  Command="{Binding MatchesSearchCommand}"/>

            <DataGrid Name="MatchesDataGrid" 
                  ItemsSource="{Binding Path=MatchesList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding Path=SelectedMatch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                  SelectionMode="Single"
                  Grid.Row="1"  
                  Grid.RowSpan="3"
                  Grid.Column="0"
                  Grid.ColumnSpan="3"
                  Margin="5"
                  Grid.IsSharedSizeScope="True" 
                  AutoGenerateColumns="False" 
                  SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding CustomerGln}" Width="*" Header="CustomerGln"/>
                    <DataGridTextColumn Binding="{Binding CustomerGoodId}" Width="*" Header="CustomerGoodId"/>
                    <DataGridTextColumn Binding="{Binding GoodId}" Width="*" Header="GoodId"/>
                    <DataGridTextColumn Binding="{Binding Name}" Width="*" Header="Name"/>
                </DataGrid.Columns>
            </DataGrid>
            
        </Grid>

        
    </Grid>
</Page>
