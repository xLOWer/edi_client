<Page x:Class="EdiClient.View.ContractorsMatchView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EdiClient.View"
      mc:Ignorable="d" 
      Title="MatchMaker">
    <Page.Resources>
        <Style x:Key="ControlButtons">
            <Setter Property="Control.BorderBrush" Value="Transparent" />
            <Setter Property="Control.Background" Value="Transparent" />
            <Setter Property="Control.Margin" Value="2,2" />
            <Setter Property="Control.BorderThickness" Value="0" />
        </Style>
    </Page.Resources>
    
    <Grid x:Name="mainMatchesGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Name="LoadDataButton" Grid.Column="0" ToolTip="Добавить новый" Command="{Binding LoadDataCommand}" Style="{StaticResource ControlButtons}">
                <TextBlock Text="Загрузить"/> </Button>

            <Button Grid.Column="1" ToolTip="Удалить" Command="{Binding RemoveCommand}" Style="{StaticResource ControlButtons}">
                <TextBlock Text="Удалить"/> </Button>

            <Button Grid.Column="2" ToolTip="Изменить" Command="{Binding EditCommand}" Style="{StaticResource ControlButtons}">
                <TextBlock Text="Изменить"/>
            </Button>

            <Button Grid.Column="3" ToolTip="Сохранить" Command="{Binding SaveCommand}" Style="{StaticResource ControlButtons}">
                <TextBlock Text="Сохранить"/>
            </Button>

            <Button Grid.Column="4" ToolTip="Отмена" Command="{Binding CancelCommand}" Style="{StaticResource ControlButtons}">
                <TextBlock Text="Отмена"/>
            </Button>
        </Grid>


        <Grid Grid.Row="1" Grid.Column="0" Margin="5 5">
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Margin="2" Text="{Binding ClientSearchText, IsAsync=True}"/>
                <Button Grid.Column="1" Content="искать" Margin="2" Command="{Binding ClientSearchCommand, IsAsync=True}"/>
                <Button Grid.Column="2" Content="сброс" Margin="2" Command="{Binding ClientResetInputCommand, IsAsync=True}"/>
            </Grid>

            <DataGrid Name="ClientsDataGrid" 
                      ItemsSource="{Binding Path=ClientsGroupList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, IsAsync=True}"
                      SelectedItem="{Binding Path=SelectedClient, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"  
                      SelectionMode="Single"
                      Grid.Row="1"
                      AutoGenerateColumns="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding SENDER_GLN}" Header="SENDER_GLN"/>
                    <DataGridTextColumn Binding="{Binding BUYER_GLN}" Header="BUYER_GLN"/>
                    <DataGridTextColumn Binding="{Binding DELIVERY_POINT_GLN}" Header="DELIVERY_POINT_GLN"/>
                    <DataGridTextColumn Binding="{Binding DELIVERY_POINT_NAME}" Header="DELIVERY_POINT_NAME"/>
                    <DataGridTextColumn Binding="{Binding BUYER_NAME}" Header="BUYER_NAME"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="5 1 5 5">
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="{Binding SelectedClient.DELIVERY_POINT_NAME}"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Content="Клиент" HorizontalAlignment="Center" FontWeight="Bold"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="GLN" Margin="10 0" HorizontalAlignment="Right"/>
                    <TextBox Grid.Column="1" Text="{Binding SelectedClient.SENDER_GLN}" Margin="10 0"/>
                    <Label Grid.Column="2" Content="{Binding SelectedSenderCustomer.Name}" Margin="10 0"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Margin="2" Text="{Binding SenderCustomerSearchText, IsAsync=True}"/>
                    <Button Grid.Column="1" Content="искать" Margin="2" Command="{Binding SenderCustomerSearchCommand, IsAsync=True}"/>
                    <Button Grid.Column="2" Content="сброс" Margin="2" Command="{Binding SenderCustomerResetInputCommand, IsAsync=True}"/>
                </Grid>

                <DataGrid Name="wg" 
                      ItemsSource="{Binding Path=SenderCustomersList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, IsAsync=True}"
                      SelectedItem="{Binding Path=SelectedSenderCustomer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"  
                      SelectionMode="Single"
                      Grid.Row="3" 
                      Grid.IsSharedSizeScope="True" 
                      AutoGenerateColumns="False" 
                      SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ID}" Header="Id"/>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Наименование"/>
                        <DataGridTextColumn Binding="{Binding Address}" Header="Адрес"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            
            
            
            <Separator Grid.Row="2" />

            
            
            
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Content="Покупатель" Margin="10 0" HorizontalAlignment="Center" FontWeight="Bold"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="GLN" Margin="10 0" HorizontalAlignment="Right"/>
                    <TextBox Grid.Column="1" Text="{Binding SelectedClient.BUYER_GLN}" Margin="10 0"/>
                    <Label Grid.Column="2" Content="{Binding SelectedBuyerCustomer.Name}" Margin="10 0"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Margin="2" Text="{Binding BuyerCustomerSearchText, IsAsync=True}"/>
                    <Button Grid.Column="1" Content="искать" Margin="2" Command="{Binding BuyerCustomerSearchCommand, IsAsync=True}"/>
                    <Button Grid.Column="2" Content="сброс" Margin="2" Command="{Binding BuyerCustomerResetInputCommand, IsAsync=True}"/>
                </Grid>

                <DataGrid Name="wg2" 
                      ItemsSource="{Binding Path=BuyerCustomersList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, IsAsync=True}"
                      SelectedItem="{Binding Path=SelectedBuyerCustomer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"  
                      SelectionMode="Single"
                      Grid.Row="3" 
                      Grid.IsSharedSizeScope="True" 
                      AutoGenerateColumns="False" 
                      SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ID}" Header="Id"/>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Наименование"/>
                        <DataGridTextColumn Binding="{Binding Address}" Header="Адрес"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            
            
            
            <Separator Grid.Row="4"/>

            
            
            
            <Grid Grid.Row="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Content="Точка доставки" Margin="10 0" HorizontalAlignment="Center" FontWeight="Bold"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="GLN" Margin="10 0" HorizontalAlignment="Right"/>
                    <TextBox Grid.Column="1" Text="{Binding SelectedClient.DELIVERY_POINT_GLN}" Margin="10 0"/>
                    <Label Grid.Column="2" Content="{Binding SelectedDeliveryPointContractor.Name}" Margin="10 0"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Margin="2" Text="{Binding DeliveryPointContractorSearchText, IsAsync=True}"/>
                    <Button Grid.Column="1" Content="искать" Margin="2" Command="{Binding DeliveryPointContractorSearchCommand, IsAsync=True}"/>
                    <Button Grid.Column="2" Content="сброс" Margin="2" Command="{Binding DeliveryPointContractorResetInputCommand, IsAsync=True}"/>
                </Grid>

                <DataGrid Name="wg3" 
                      ItemsSource="{Binding Path=DeliveryPointContractorsList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, IsAsync=True}"
                      SelectedItem="{Binding Path=SelectedDeliveryPointContractor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"  
                      SelectionMode="Single"
                      Grid.Row="3" 
                      Grid.IsSharedSizeScope="True" 
                      AutoGenerateColumns="False" 
                      SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ID}" Header="Id"/>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Наименование"/>
                        <DataGridTextColumn Binding="{Binding Address}" Header="Адрес"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </Grid>
    </Grid>
</Page>
